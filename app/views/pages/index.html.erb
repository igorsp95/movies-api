<div class="container">
  <h1>Load your CSV file to import</h1>
  <%= form_tag import_api_v1_movies_path, action: 'import', multipart: true, remote: true do |f| %>
    <%= file_field_tag :file, accept: 'text/csv' %>
    <br>
    <%= submit_tag "Import CSV", class: "btn" %>
  <% end %>
  <br>
  <%= link_to "Check JSON file", api_v1_movies_path, class: "btn-2" %>
</div>

<script>
  document.querySelector(".btn").addEventListener("click", function() {
    display_btn = document.querySelector(".btn-2")
    display_btn.style.visibility = "visible";
  });
</script>
